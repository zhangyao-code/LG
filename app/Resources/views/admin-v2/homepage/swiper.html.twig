        <ul class="info-left" style="width: 590px">
          <li><input name="trace[li_1]" value="{{ setting.trace.li_1|default('li 内容') }}"></li>
          <li><input name="trace[li_2]" value="{{ setting.trace.li_2|default('li 内容') }}"></li>
