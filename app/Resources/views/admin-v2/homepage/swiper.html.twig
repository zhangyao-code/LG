    <div class="part trace" style="width: 100%">
      <input class="title" name="trace[title]" value="{{ setting.trace.title|default('二维码追溯系统') }}">
      <input class="desc" name="trace[tip]" value="{{ setting.trace.tip|default('二维码追溯系统') }}">
