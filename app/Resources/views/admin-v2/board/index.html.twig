{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_message_board' %}
{% block page_buttons %}
  <button class="btn btn-success btn-sm pull-right" id="add-navigation-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_v2_news_create') }}">创建新闻</button>
{% endblock %}

{% block main %}
  <table id="navigation-table" class="table table-striped table-hover navigation-table sortable-list">
    <thead>
    <tr>
      <th width="15%">{{'公司名称'|trans}}</th>
      <th width="15%">{{'预留人名字'|trans}}</th>
      <th width="15%">{{'联系方式'|trans}}</th>
      <th width="15%">{{'邮箱'|trans}}</th>
      <th width="15%">{{'提交时间'|trans}}</th>
      <th width="">{{'内容'|trans}}</th>
    </tr>
    </thead>

    <tbody >
    {% for data in datas %}
      <tr >
        <td>
          {{ data.company }}
        </td>
        <td>
          {{ data.userName }}
        </td>
        <td>
          {{ data.mobile }}
        </td>
        <td>
          {{ data.email }}
        </td>
        <td>
          {{ data.createdTime|date('Y-m-d H:i') }}
        </td>
        <td>
          {{ data.content }}
        </td>
      </tr>
    {% else %}
      <tr><td colspan="20"><div class="empty">{{'site.datagrid.empty'|trans}}</div></td></tr>
    {% endfor %}

    </tbody>
  </table>
{% endblock %}
