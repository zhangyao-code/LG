{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_news_manage' %}
{% set script_controller = 'news/list' %}
{% block page_buttons %}
  <button class="btn btn-success btn-sm pull-right" id="add-navigation-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('admin_v2_news_create') }}">创建新闻</button>
{% endblock %}

{% block main %}
  <table id="navigation-table" class="table table-striped table-hover navigation-table sortable-list">
    <thead>
    <tr>
      <th width="50%">{{'标题'|trans}}</th>
      <th width="10%">{{'创建时间'|trans}}</th>
      <th width="30%">{{'admin.setting.navigation.operation'|trans}}</th>
    </tr>
    </thead>

    {% include 'admin-v2/news/tbody.html.twig' %}
  </table>
{% endblock %}
