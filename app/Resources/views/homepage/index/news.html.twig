<div class="post news n1">
    <div class="postTitle ">
      <h3><i class="fa fa-quote-left"></i>新闻资讯</h3>
      <span class="title2">News</span> </div>
    <div class="PostNews">
      <ul>
        {% for new in news %}
          <li class=" ">
            <div class="post-img loading"><a class="pic" href="{{ path('homepage_new_show', {id:new.id}) }}" title="{{new.title}}" rel="bookmark">
                <div class="msk"></div>
                <i class="fa fa-search"></i> <img class="b-lazy" src="{{ asset(new.icon) }}" alt="{{new.title}}" /> </a> </div>
            <h4><a href="{{ path('homepage_new_show', {id:new.id}) }}" title="{{new.title}}">{{new.title}}</a></h4>
            <span class="time"><img style="margin-right: 2px;width: 12px" src="/images/time.png" alt="{{new.title}}" /> {{ new.createdTime|date('Y-m-d') }} </span> <span><img style="margin-right: 2px;width: 12px" src="/images/watch.png" alt="{{new.title}}" />{{ new.watch }}</span>
            <div style="word-wrap:break-word;word-break:normal; ">{{new.content|plain_text(100)}}</div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>